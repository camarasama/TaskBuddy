{
  "name": "taskbuddy",
  "version": "1.0.0",
  "private": true,
  "description": "Family task management PWA with gamification for children ages 10-16",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm -w backend run dev",
    "dev:frontend": "npm -w frontend run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "npm -w backend run build",
    "build:frontend": "npm -w frontend run build",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "npm -w backend run lint",
    "lint:frontend": "npm -w frontend run lint",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "npm -w backend run test",
    "test:frontend": "npm -w frontend run test",
    "db:migrate": "npm -w backend run db:migrate",
    "db:seed": "npm -w backend run db:seed",
    "db:studio": "npm -w backend run db:studio"
  },
  "workspaces": [
    "backend",
    "frontend",
    "shared"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
